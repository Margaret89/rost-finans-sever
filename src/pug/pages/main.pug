extends ../layout/main

block variables
	- var title = 'Главная';

block content
	section.top-block
		.container
			.row
				.col-12
					.top-block__content
						.top-block__main
							.top-block__info
								.top-block__title Займы в&nbsp;Северодвинске
								.top-block__text
									p Получить деньги без справок и поручителей легко и просто!
									p Дополнительный текст про отделения банка

							form.form-calc
								.form-calc__fields
									.form-calc__item
										.range.js-range
											.range__top
												span.range__title Сумма займа: 
												span.range__val <span class="js-range-val" data-text="руб."></span>
											input(type='text' name='prices' data-provide='slider' data-slider-min='1000' data-slider-max='30000' data-slider-step='1' data-slider-value='5000' data-slider-tooltip="hide" class="js-range-input")

											.range__scale
												.range__min.js-range-min
												.range__max.js-range-max

									.form-calc__item
										.range.js-range(data-note='true')
											.range__top
												span.range__title Срок займа: 
												span.range__val <span class="js-range-val" data-text="день"></span>
											input(type='text' name='days' data-provide='slider' data-slider-min='10' data-slider-max='32' data-slider-step='1' data-slider-value='25' data-slider-tooltip="hide" class="js-range-input" )

											.range__scale
												.range__min.js-range-min
												.range__max.js-range-max

								.form-calc-res
									.form-calc-res__content
										.form-calc-res__label Всего к&nbsp;возврату
										.form-calc-res__price 5170
											span.form-calc-res__currency руб

									.form-calc-res__btn
										input.btn(type="submit", value="Продолжить")

						.contact
							#map.map
							script(src='http://api-maps.yandex.ru/2.1/?lang=ru_RU' type='text/javascript')
						
							.contact-list
								.contact-list__item
									.contact-list__icon
										+svg('ic-address','ic-address', '27', '33')
									.contact-list__content
										.contact-list__label Адрес:
										.contact-list__text 164522, Архангельская область, г. Северодвинск, ул. Трухинова, д. 6А, пом. 3-Н
								
								.contact-list__item
									.contact-list__content
										.contact-list__label Как добраться:
										.contact-list__text
											.contact-path
												span.contact-path__icon
													+svg('ic-bus','ic-bus', '18', '18')
												span.contact-path__text Бульвар Строителей
												span.contact-path__distance
													+svg('ic-person','ic-person', '8', '14')
													|180 м

												span.contact-path__num 4

	section.branches-wrap
		.container
			.row
				.col-12
					.branches-wrap__content
						.h1 Отделение в регионе

						.branches
							a(href="#").branches__item
								.branches__img(style="background-image: url(assets/img/branch2.jpg)")

							a(href="#").branches__item
								.branches__img(style="background-image: url(assets/img/branch1.jpg)")